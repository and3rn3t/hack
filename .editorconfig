# Editor Configuration for The Hack: Ghost Protocol
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust source files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 2

# YAML files (GitHub Actions, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Batch/PowerShell scripts
[*.{bat,ps1}]
end_of_line = crlf
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
